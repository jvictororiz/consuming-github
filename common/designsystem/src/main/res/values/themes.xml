<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ConsumingGithub" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimary</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="buttonCompat">@style/PrimaryButton</item>
        <item name="buttonStyle">@style/PrimaryButton</item>
        <item name="android:buttonStyle">@style/PrimaryButton</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="PrimaryButton" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/h3</item>
        <item name="android:paddingStart">@dimen/default_margin</item>
        <item name="android:paddingEnd">@dimen/default_margin</item>
        <item name="android:background">@drawable/shape_primary_button</item>
    </style>
</resources>